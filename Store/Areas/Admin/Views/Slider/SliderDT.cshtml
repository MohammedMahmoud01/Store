@model List<TbSlider>
@section Styles
{
    <link href="~/css/dataTable.min.css" rel="stylesheet" />

}


<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">


                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Slider Data</h3>
                        <br />
                        <a asp-action="Edit" class="btn btn-info my-2">New Slider</a>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Slider Id</th>
                                    <th>Slider Image</th>
                                    <th>Description</th>
                                    <th>Long Description</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var slider in Model)
                                {
                                    <tr>
                                        <td>@slider.SliderId</td>
                                        <td>
                                            <img src="@string.Format("/Uploads/{0}",slider.SliderImage)" width="130" height="50" />
                                        </td>
                                        <td>@slider.Descreption</td>
                                        <td>@slider.LongDescreption</td>
                                        <td> <a asp-action="Edit" asp-route-Id="@slider.SliderId" class="btn btn-info">Edit</a></td>
                                        <td> <a onclick="confirm(" Are you sure");" asp-action="Delete" asp-route-Id="@slider.SliderId" class="btn btn-danger">Delete</a></td>
                                    </tr>
                                }


                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Slider Id</th>
                                    <th>Slider Image</th>
                                    <th>Description</th>
                                    <th>Long Description</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->





@section Scripts
{

    <script src="~/js/dataTable.min.js"></script>

    <script>
        $(function () {
            $("#example1").DataTable({
                "responsive": true, "lengthChange": false, "autoWidth": false,
                "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
            });
        });
    </script>
}