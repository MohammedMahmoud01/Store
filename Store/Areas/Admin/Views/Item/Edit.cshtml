@model TbItem

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Item Form</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form enctype="multipart/form-data"
                      method="post" role="form" asp-controller="Item" asp-action="Save">
                    <div class="card-body">
                        <div class="form-group">
                            @if(Model != null)
                            {
                                <input type="hidden" asp-for="ItemId" />
                            }
                        </div>
                        <div class="form-group">
                            <label>Item Name</label>
                            <input asp-for="ItemName"
                                   type="text" class="form-control" placeholder="Enter Item Name">
                            <span class="col-form-label text-danger" asp-validation-for="ItemName"></span>
                        </div>
                        <div class="form-group">
                            <label>Sales Price</label>
                            <input asp-for="SalesPrice"
                                   type="number" class="form-control" placeholder="Enter Sales Price">
                            <span class="col-form-label text-danger" asp-validation-for="SalesPrice"></span>
                        </div>
                        <div class="form-group">
                            <label>Purchase Price</label>
                            <input asp-for="PurchasePrice" type="number"
                                   class="form-control" placeholder="Enter Purchase Price">
                            <span class="col-form-label text-danger" asp-validation-for="PurchasePrice"></span>
                        </div>
                        <div class="form-group">
                            <label>Category Name</label>
                            <select class="form-control" asp-for="SubCategoryId"
                                    asp-items="@(new SelectList(ViewBag.Categories,"SubCategoryId","SubCategoryName"))">
                            </select>
                        </div>


                        <div class="form-group">
                            @*<label>Category Name</label>*@
                            <input type="hidden" value="1" asp-for="CategoryId">
                        </div>

                        @*<div class="form-group">
            <<label>SubCategory Name</label>
            <select class="form-control" asp-for="SubCategoryId" disabled
                    asp-items="@(new SelectList(ViewBag.Categories,"SubCategoryId","SubCategoryName"))">
            </select>
        </div>*@


                        <div class="form-group">
                            <label for="exampleInputFile">File input</label>
                            <div class="input-group">
                                <div class="custom-file">
                                    <input asp-for="ImageName" type="file" name="Files" class="custom-file-input">
                                    <label class="custom-file-label" for="exampleInputFile">Choose file</label>
                                </div>
                                <div class="input-group-append">
                                    <span class="input-group-text">Upload</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                        <button type="submit" class="btn btn-success">Submit</button>
                        <a class="btn btn-info mx-4" asp-action="ItemDT">Back</a>
                    </div>
                </form>
            </div>
            <!-- /.card -->
        </div>

    </div>
    <!-- /.row -->
</div><!-- /.container-fluid -->



@section Scripts
    {
    <script src="~/Admin/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <script>
        $(function () {
            bsCustomFileInput.init();
        });
    </script>
}
<!-- bs-custom-file-input -->
